---
import STTButton from "@components/atoms/STTButton.astro";
import Footer from "@components/widgets/Footer.astro";
import NavBar from "@components/widgets/NavBar.astro";
import tabIcon from "../../public/images/logo.png";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" href="/logo.png" /> -->
    <link rel="icon" href={tabIcon} />

    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lexend:wght@400;700;800;900&family=Silkscreen:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <main
      class="flex flex-col justify-center items-center w-full min-h-screen min-w-screen"
    >
      <NavBar />
      <slot />
      <STTButton />
      <Footer />
    </main>

    <style>
      html {
        scroll-behavior: smooth;
      }

      @import url("https://fonts.googleapis.com/css2?family=Lexend:wght@400;700;800;900&family=Silkscreen:wght@400;700&display=swap");

      * {
        font-family: "Lexend";
      }
    </style>
  </body>

  <script>
    import AOS from "aos";
    import "aos/dist/aos.css";
    AOS.init();
  </script>
</html>
