---
import ArticleCard from "@components/core/ArticleCard.astro";
import SectionHeading from "@components/widgets/SectionHeading.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

export async function getStaticPaths({ paginate }) {
  const articles = await Astro.glob("../../data/articles/**/*.mdx");
  const nonDraftArticles = articles.filter((post) => !post.frontmatter.draft);

  return paginate(nonDraftArticles, { pageSize: 12 });
}

const { page } = Astro.props;
---

<BaseLayout
  title="Blog"
  description={"Nice Blog Posts and Articles that Increase Your Knowladge in Web Development."}
>
  <div class="w-full grow bg-[#12181b]">
    <div class="container mx-auto px-4 mt-20">
      <SectionHeading
        animate={false}
        primaryHeading="Blog"
        secondaryHeading="Awesome Articles ✍️"
        backgroundColor="bg-[#d100d4]"
      />

      <div
        class="mt-20 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 justify-items-center gap-6"
      >
        {
          page.data.map(
            ({ frontmatter: { slug, title, excerpt, cover, tags } }) => {
              const readyTags = tags.split(", ");

              return (
                <ArticleCard
                  title={title}
                  link={`/blog/${slug}`}
                  cover={cover}
                  excerpt={excerpt}
                  tags={readyTags}
                />
              );
            }
          )
        }
      </div>
      <div
        class="w-full flex justify-center items-center mt-8 sm:mt-10 md:mt-12 lg:mt-14 xl:mt-16"
      >
        {
          page.url.prev ? (
            <a
              href={page.url.prev}
              class="focus:outline-none text-[#12181b] bg-orange-400 hover:bg-orange-500 focus:ring-4 duration-300   font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:ring-orange-900"
            >
              Prev
            </a>
          ) : (
            <button
              type="button"
              disabled={true}
              class="focus:outline-none  bg-gray-700 text-gray-400  focus:ring-4  font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:ring-gray-900"
            >
              Prev
            </button>
          )
        }
        {
          page.url.next ? (
            <a
              href={page.url.next}
              class="focus:outline-none text-[#12181b] bg-orange-400 hover:bg-orange-500 duration-300  focus:ring-4 focus:ring-orange-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2"
            >
              Next
            </a>
          ) : (
            <button
              type="button"
              disabled={true}
              class="focus:outline-none  bg-gray-700 text-gray-400  focus:ring-4  font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:ring-gray-900"
            >
              Prev
            </button>
          )
        }
      </div>
    </div>
  </div>
</BaseLayout>
