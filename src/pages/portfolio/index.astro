---
import ProjectCard from "@components/core/ProjectCard.astro";
import SectionHeading from "@components/widgets/SectionHeading.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import projects from "../../data/projects/projects.json";
---

<BaseLayout
  title="Blog"
  description={"Nice Blog Posts and Articles that Increase Your Knowladge in Web Development."}
>
  <div class="w-full grow bg-[#12181b]">
    <div class="container mx-auto px-4 mt-20">
      <SectionHeading
        animate={false}
        primaryHeading="Projects"
        secondaryHeading="Awesome Projects is Waiting You Here ðŸ“¦"
        backgroundColor="bg-[#d100d4]"
      />

      <div
        class="mt-20 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 justify-items-center gap-6"
      >
        {
          projects.map(
            ({ title, cover, githubUrl, livePreviewUrl, category }) => {
              return (
                <ProjectCard
                  title={title}
                  cover={cover}
                  githubUrl={githubUrl}
                  livePreviewUrl={livePreviewUrl}
                  category={category}
                />
              );
            }
          )
        }
      </div>
    </div>
  </div>
</BaseLayout>
