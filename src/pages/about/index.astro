---
import ProgressBar from "@components/widgets/ProgressBar.astro";
import personalImage from "@assets/images/personal-image.jpeg";
import BaseLayout from "@layouts/BaseLayout.astro";
import educationIcon from "@assets/icons/experience.svg";
