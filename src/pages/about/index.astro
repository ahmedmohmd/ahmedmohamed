import twitterIcon from "@assets/icons/twitter.svg";
import githubIcon from "@assets/icons/github.svg";

const mySkills = [
  {
    skillName: "Git",
    progress: 50,
    width: "w-1/2",
  },
  {
    skillName: "HTML",
    progress: 90,
    width: "w-11/12",
  },
  {
    skillName: "CSS",
    progress: 90,
    width: "w-11/12",
  },
  {
    skillName: "JavaScript",
    progress: 80,
    width: "w-4/5",
  },
  {
    skillName: "Pug JS",
    progress: 70,
    width: "w-9/12",
  },
  {
    skillName: "Sass",
    progress: 80,
    width: "w-4/5",
  },
  {
    skillName: "Tailwind",
    progress: 60,
    width: "w-3/5",
  },
  {
    skillName: "React JS",
    progress: 80,
    width: "w-4/5",
  },
  {
    skillName: "Node JS",
    progress: 75,
    width: "w-3/4",
  },
  {
    skillName: "MongoDB",
    progress: 60,
