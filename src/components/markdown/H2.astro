---
interface Props {
  id?: string;
}

const { id } = Astro.props;
---

{
  id ? (
    <h2
      id={id}
      class="text-2xl sm:text-3xl text-white font-bold flex justify-start items-center mb-3 gap-2 mt-5"
    >
      <span class="text-orange-500">#</span>
      <slot />
    </h2>
  ) : (
    <h2 class="text-2xl sm:text-3xl text-white font-bold flex justify-start items-center mb-3 gap-2 mt-5">
      <span class="text-orange-500">#</span>
      <slot />
    </h2>
  )
}
