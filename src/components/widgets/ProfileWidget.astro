---
import personalAvatar from "@assets/images/personal-avatar.png";
import facebookIcon from "@assets/icons/facebook.svg";
import linkedinIcon from "@assets/icons/linkedin.svg";
import twitterIcon from "@assets/icons/twitter.svg";
import githubIcon from "@assets/icons/github.svg";
---

<div
  class="flex flex-col items-center justify-start text-center sm:w-1/3 sm:py-8 shrink-0"
>
  <div
    class="inline-flex items-center justify-center text-gray-400 bg-gray-200 rounded-full shrink-0"
  >
    <img
      src={personalAvatar}
      alt="My Personal Photo"
      class="border-[5px] border-white rounded-full w-40 h-40 shrink-0"
    />
  </div>
  <div class="flex flex-col items-center justify-center text-center">
    <h2 class="mt-4 text-xl font-semibold title-font text-white">
      Ahmed Mohamed
    </h2>
    <div class="w-12 h-1 mt-2 mb-4 bg-orange-500 rounded"></div>
    <p class="text-base text-gray-500">
      Hello there, My Name is <span class="text-orange-500 font-semibold"
        >Ahmed</span
      >, I am <span class="text-orange-500 font-semibold">Frontend</span> Web Developer.
    </p>
  </div>

  <div class="flex items-center justify-center gap-3 pt-5 text-xl social-icons">
    <a
      href="https://www.facebook.com/a7m3dmohmd/"
      target="_blank"
      class="p-2 duration-500 bg-gray-700/70 rounded-xl hover:bg-[#097eeb] shrink-0"
    >
      <img class="w-6 h-6" src={facebookIcon} alt="Facebook" />
    </a>
    <a
      href="https://twitter.com/a7m3D_000"
      target="_blank"
      class="p-2 duration-500 bg-gray-700/70 rounded-xl hover:bg-[#1d9bf0] shrink-0"
    >
      <img class="w-6 h-6 shrink-0" src={twitterIcon} alt="Twitter" />
    </a>
    <a
      href="https://www.linkedin.com/in/ahmedmohmd/"
      target="_blank"
      class="p-2 duration-500 bg-gray-700/70 rounded-xl hover:bg-[#0a66c2] shrink-0"
    >
      <img class="w-6 h-6 shrink-0" src={linkedinIcon} alt="Linkedin" />
    </a>
    <a
      href="https://github.com/ahmedmohmd"
      target="_blank"
      class="p-2 duration-500 bg-gray-700/70 rounded-xl hover:bg-[#161b22] shrink-0"
    >
      <img class="w-6 h-6 shrink-0" src={githubIcon} alt="Github" />
    </a>
  </div>
</div>
