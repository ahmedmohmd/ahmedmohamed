---
interface Props {
  skillName: string;
  progress: number;
  width: string;
}

const { skillName, progress, width } = Astro.props;
---

<div class="relative w-full pt-1">
  <div class="flex items-center justify-between mb-2">
    <div>
      <span
        class="inline-block px-2 py-1 text-xs font-semibold text-orange-600 uppercase bg-orange-200 rounded-full"
      >
        {skillName}
      </span>
    </div>
    <div class="text-right">
      <span class="inline-block text-xs font-semibold text-white">
        {progress}%
      </span>
    </div>
  </div>
  <div class="flex h-2 mb-4 overflow-hidden text-xs bg-orange-200 rounded">
    <div
      class={width +
        " shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-orange-500"}
    >
    </div>
  </div>
</div>
